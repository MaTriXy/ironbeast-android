<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#B0E2FF">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/interstitialwithtriggers">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Custom trigger"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/initCustomTrigger"
        android:layout_below="@id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        />

    <View
        android:id="@+id/strut"
        android:layout_below="@id/initCustomTrigger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="0dp"
        android:layout_below="@id/initCustomTrigger"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:id="@+id/initSdkTrigger1"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/initSdkTrigger2"
        android:layout_below="@+id/initCustomTrigger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/initSdkTrigger1"
        android:layout_toEndOf="@+id/initSdkTrigger1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init Ad unit"
        android:id="@+id/btnInitAdUnit"
        android:layout_below="@+id/initSdkTrigger1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnLoadAdUnit"
        android:layout_alignEnd="@+id/btnLoadAdUnit" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load AD unit"
        android:id="@+id/btnLoadAdUnit"
        android:layout_below="@+id/btnInitAdUnit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isReady"
        android:id="@+id/btnIsReady"
        android:layout_below="@+id/showSdkTrigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Interstitial"
        android:id="@+id/btnShowAd"
        android:layout_below="@+id/btnIsReady"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/showSdkTrigger"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Custom trigger"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/showCustomTrigger"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView3"
        android:src="@drawable/settings_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init &amp; Load Ad:"
        android:textSize="22dp"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SDK trigger"
        android:id="@+id/textView16"
        android:layout_below="@+id/showCustomTrigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView4"
        android:src="@drawable/show_icon"
        android:layout_below="@+id/btnLoadAdUnit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Ad:"
        android:textSize="22dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/btnLoadAdUnit"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />


    <!--<Button-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Clear triggers"-->
    <!--android:id="@+id/btnClearTriggers"-->
    <!--android:layout_below="@+id/btnShowAd"-->
    <!--android:layout_centerHorizontal="true" />-->
</RelativeLayout>
</ScrollView>