<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#B0E2FF">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Custom trigger"
            android:id="@+id/textView"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:id="@+id/initCustomTrigger"
            android:inputType="text"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SDK trigger"
            android:id="@+id/lableSDKTriggers"
            android:layout_below="@+id/initCustomTrigger"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/initSdkTrigger1"
            android:layout_below="@+id/lableSDKTriggers"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init Ad unit"
            android:id="@+id/btnInitAdUnit"
            android:layout_below="@+id/initSdkTrigger1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load AD unit"
            android:id="@+id/btnLoadAdUnit"
            android:layout_below="@+id/btnInitAdUnit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Custom trigger"
            android:id="@+id/textView7"
            android:layout_below="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:id="@+id/showCustomTrigger"
            android:inputType="text"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SDK trigger"
            android:id="@+id/textView8"
            android:layout_below="@+id/showCustomTrigger"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showSdkTrigger"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="isReady"
            android:id="@+id/btnIsReady"
            android:layout_below="@+id/showSdkTrigger"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <View
            android:id="@+id/strut"
            android:layout_below="@id/btnIsReady"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show Stickeez"
            android:id="@+id/btnShowAd"
            android:layout_below="@id/btnIsReady"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnIsReady"
            android:layout_alignEnd="@+id/btnIsReady" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hide Stickeez"
            android:id="@+id/btnHideAd"
            android:onClick="hideStickee"
            android:layout_below="@+id/btnShowAd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnShowAd"
            android:layout_alignEnd="@+id/btnShowAd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnHideAd"
            android:id="@+id/position"
            android:orientation="horizontal">

            <Button
                android:id="@+id/posTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="↖" />

            <Button
                android:id="@+id/posLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="←"
                android:textStyle="bold" />

            <Button
                android:id="@+id/posTopRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="↗" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/position"
            android:id="@+id/position2"

            android:orientation="horizontal">

            <Button
                android:id="@+id/posBottomLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="↙" />

            <Button
                android:id="@+id/posRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="→"
                android:textStyle="bold" />

            <Button
                android:id="@+id/posBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="setStickeePosition"
                android:text="↘" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/position2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stickeeOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="isStickeeOffers"
                android:text="Showing Offers?" />

            <Button
                android:id="@+id/stickeeOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:onClick="isStickeeOpen"
                android:text="Showing Stickee?" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView9"
            android:src="@drawable/settings_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init &amp; Load Ad:"
            android:textSize="22dp"
            android:id="@+id/textView20"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:id="@+id/imageView10"
            android:src="@drawable/show_icon"
            android:layout_below="@+id/btnLoadAdUnit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Ad:"
            android:textSize="22dp"
            android:id="@+id/textView21"
            android:layout_below="@+id/btnLoadAdUnit"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20" />

    </RelativeLayout>
</ScrollView>